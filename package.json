{
  "name": "usm",
  "version": "1.0.0",
  "description": "Minimal USD Stable Coin",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "buidler compile",
    "test": "buidler test test/*.js",
    "coverage": "buidler coverage --network coverage --temp build --testfiles 'test/*.js'",
    "lint:js": "eslint ./test ./deploy --fix",
    "lint:sol": "find contracts -regex '.*\\.sol$' | xargs solhint -f table",
    "ganache": "./scripts/ganache.sh",
    "deploy:ganache": "yarn ganache && truffle migrate",
    "mainnet-ganache": "./scripts/mainnet-ganache.sh"
  },
  "author": "Alex Roan",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.3.8",
    "@nomiclabs/buidler-truffle5": "^1.3.4",
    "@nomiclabs/buidler-web3": "^1.3.4",
    "@openzeppelin/contracts": "^3.1.0",
    "@openzeppelin/test-helpers": "^0.5.6",
    "@truffle/hdwallet-provider": "^1.0.40",
    "@types/mocha": "^8.0.0",
    "buidler-deploy": "^0.6.0-beta.37",
    "buidler-gas-reporter": "0.1.4-beta.4",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "erc20permit": "^0.0.4",
    "ethereumjs-util": "^7.0.3",
    "ethers": "^5.0.7",
    "ganache-time-traveler": "^1.0.14",
    "mocha": "^7.1.0",
    "prettier": "^2.0.5",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.9",
    "truffle": "^5.1.39",
    "truffle-flattener": "^1.5.0"
  },
  "dependencies": {
    "@chainlink/contracts": "0.0.9",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "prettier-eslint": "12.0.0",
    "truffle-hdwallet-provider": "^1.0.17"
  }
}
